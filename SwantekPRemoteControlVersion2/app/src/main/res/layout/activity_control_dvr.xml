<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="swantekp.swantekpremotecontrol.ControlDVR">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2"
        android:background="@color/dvr_status_background">

        <TextView
            android:text="My DVR"
            android:textSize="20sp"
            android:textColor="@color/tv_status_text"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="DVR Power:"
                android:textSize="20sp"
                android:textColor="@color/tv_status_text"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                />

            <TextView
                android:text="State:"
                android:textSize="20sp"
                android:textColor="@color/tv_status_text"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dvd_power_status"
                android:text="Off"
                android:textSize="20sp"
                android:textColor="@color/tv_status_text"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

            <TextView
                android:id="@+id/dvr_state"
                android:text="Stopped"
                android:textSize="20sp"
                android:textColor="@color/tv_status_text"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DVR Remote Control"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/remote_control_label_font"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:text="@string/power_switch"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            />

        <Switch
            android:id="@+id/dvr_power_switch"
            android:tag="dvr_power_switch"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|top">

        <Button
        android:id="@+id/play_button"
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/stop_button"
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/pause_button"
            android:text="Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|top">

        <Button
            android:id="@+id/fast_forward_button"
            android:text="Fast Forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/fast_rewind_button"
            android:text="Fast Rewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:layout_marginBottom="125dp">

        <Button
            android:id="@+id/record_button"
            android:text="Record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <Button
        android:id="@+id/switch_to_tv_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch to TV"/>



</LinearLayout>
